<config>
    <modules>
        <Indexa_Nfe>
            <version>0.1.0</version>
        </Indexa_Nfe>
    </modules>   
    <default>
        <indexa_nfe>
            <geral>
                <versao>2.00</versao>
            </geral>
        </indexa_nfe>
    </default>

    <global>
        <template>
            <email>
                <indexa_nfe_email translate="label" module="indexa_nfe">
                    <label>eOtica NFe</label>
                    <file>indexa_nfe_email.html</file>
                    <type>html</type>
                </indexa_nfe_email>
            </email>
        </template>
        <fieldsets>
            <sales_convert_quote_item>                           
                <nfe_ncm>
                    <to_order_item>*</to_order_item>
                </nfe_ncm>
                <nfe_ucom>
                    <to_order_item>*</to_order_item>
                </nfe_ucom>
                <real_price>
                    <to_order_item>*</to_order_item>
                </real_price>
            </sales_convert_quote_item>
            <sales_convert_order_item>    
                <nfe_ncm>
                    <to_quote_item>*</to_quote_item>                    
                    <to_shipment_item>*</to_shipment_item>
                </nfe_ncm>
                <nfe_ucom>
                    <to_quote_item>*</to_quote_item>                    
                    <to_shipment_item>*</to_shipment_item>
                </nfe_ucom>
                <real_price>
                    <to_quote_item>*</to_quote_item>
                    <to_shipment_item>*</to_shipment_item>
                </real_price>
            </sales_convert_order_item>
        </fieldsets>
        <models>
            <indexa_nfe>
                <class>Indexa_Nfe_Model</class>
                <resourceModel>indexa_nfe_resource</resourceModel>                
            </indexa_nfe>
            <indexa_nfe_resource>
                <class>Indexa_Nfe_Model_Resource</class>
                <entities>
                    <directory_country>
                        <table>nfe_directory_country</table>
                    </directory_country>
                    <directory_country_region>
                        <table>nfe_directory_country_region</table>
                    </directory_country_region>
                    <directory_country_region_city>
                        <table>nfe_directory_country_region_city</table>
                    </directory_country_region_city>
                    <sales_order>
                        <table>nfe_sales_order</table>
                    </sales_order>
                    <sales_order_nf>
                        <table>nfe_sales_order_nf</table>
                    </sales_order_nf>
                    <sales_order_request>
                        <table>nfe_sales_order_nf_request</table>
                    </sales_order_request>
                    <certificado>
                        <table>nfe_certificado</table>
                    </certificado>
                </entities>
            </indexa_nfe_resource>                
        </models>
        <resources>
            <indexa_nfe_setup>
                <setup>
                    <module>Indexa_Nfe</module>
                </setup>
                <connection>
                    <use>directory_setup</use>
                </connection>
            </indexa_nfe_setup>
        </resources>
        <blocks>
            <indexa_nfe>
                <class>Indexa_Nfe_Block</class>
            </indexa_nfe>
            <customer>
                <rewrite>
                    <account_dashboard_address>Indexa_Nfe_Block_Customer_Account_Dashboard_Address</account_dashboard_address>
                    <address_book>Indexa_Nfe_Block_Customer_Address_Book</address_book>
                </rewrite>
            </customer>
        </blocks>	            
        <helpers>
            <nfe>
                <class>Indexa_Nfe_Helper</class>
            </nfe>
        </helpers>	
        <events>
            <customer_address_format>
               <observers>
                    <indexa_nfe_address_format>
                        <type>singleton</type>
                        <class>Indexa_Nfe_Model_Observer</class>
                        <method>formatAddress</method>
                    </indexa_nfe_address_format>
                </observers>
            </customer_address_format>                
            <checkout_submit_all_after>
                <observers>
                    <indexa_nfe_checkout_submit_all_after>
                        <type>singleton</type>
                        <class>Indexa_Nfe_Model_Observer</class>
                        <method>salesOrderSaveNf</method>
                    </indexa_nfe_checkout_submit_all_after>
                </observers>
            </checkout_submit_all_after>    
            <sales_quote_add_item>
                <observers>
                    <indexa_nfe_sales_add_quote_item>
                        <type>singleton</type>
                        <class>indexa_nfe/observer</class>
                        <method>salesQuoteAddItem</method>
                    </indexa_nfe_sales_add_quote_item>
                </observers>
            </sales_quote_add_item>
        </events>
    </global>
    <frontend>
        <routers>
            <indexa_nfe>
                <use>standard</use>
                <args>
                    <module>Indexa_Nfe</module>
                    <frontName>nfe</frontName>
                </args>
            </indexa_nfe>
        </routers>   
        <layout>
            <updates>
                <indexa_nfe>
                    <file>indexa_nfe.xml</file>
                </indexa_nfe>
            </updates>
        </layout>
    </frontend>
    <admin>
        <routers>
            <nfe>
                <use>admin</use>
                <args>
                    <module>Indexa_Nfe</module>
                    <frontName>nfe</frontName>
                </args>
            </nfe>
        </routers>
    </admin>
    
    <adminhtml>
        <translate>
            <modules>
                <Indexa_Nfe>
                    <files>
                        <default>Indexa_Nfe.csv</default>
                    </files>
                </Indexa_Nfe>
            </modules>
        </translate>
        <layout>
            <updates>
                <indexa_nfe>
                    <file>indexa_nfe.xml</file>
                </indexa_nfe>
            </updates>
        </layout>
        <events>           
            <sales_order_shipment_save_after>
                <observers>
                    <indexa_nfe>
                        <type>singleton</type>
                        <class>indexa_nfe/observer</class>
                        <method>salesOrderShipmentSaveAfter</method>
                    </indexa_nfe>
                </observers>
            </sales_order_shipment_save_after>   
            <core_block_abstract_to_html_after>
                <observers>
                    <indexa_nfe_blocks>
                        <type>singleton</type>
                        <class>indexa_nfe/observer</class>
                        <method>salesOrderNfeBlock</method>
                    </indexa_nfe_blocks>
                </observers>
            </core_block_abstract_to_html_after>   
        </events>	
    </adminhtml> 
    <crontab>
        <jobs>
            <indexa_nfe_process>
                <schedule>
                    <cron_expr>* * * * *</cron_expr>
                </schedule>
                <run>
                    <model>indexa_nfe/observer::nfeProcess</model>
                </run>
            </indexa_nfe_process>
            <indexa_nfe_create>
                <schedule>
                    <cron_expr>* * * * *</cron_expr>
                </schedule>
                <run>
                    <model>indexa_nfe/observer::updateInfo</model>
                </run>
            </indexa_nfe_create>
        </jobs>
    </crontab>
</config>